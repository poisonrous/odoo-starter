<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_music_track_tree" model="ir.ui.view">
        <field name="name">music.track.tree</field>
        <field name="model">music.track</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="artist_id" widget="many2many_tags"/>
                <field name="length" widget="float_time"/>
                <field name="explicit"/>
            </tree>
        </field>
    </record>

    <record id="view_music_track_form" model="ir.ui.view">
        <field name="name">music.track.form</field>
        <field name="model">music.track</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="artist_id" widget="many2many_tags"/>
                        <field name="length" widget="float_time"/>
                        <field name="explicit"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="music_track_action" model="ir.actions.act_window">
        <field name="name">Tracks</field>
        <field name="res_model">music.track</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_music_track_tree"/>
    </record>

</odoo>