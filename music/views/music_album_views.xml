<?xml version="1.0"?>
<odoo>

<record id="view_music_album_search" model="ir.ui.view">
    <field name="name">music.album.search</field>
    <field name="model">music_album</field>
    <field name="arch" type="xml">
        <search string="Albums">
            <field name="name"/>
            <field name="artist"/>
            <group expand="0" string="Extended Filters">
                <filter string="New" name="new"/>
                <filter string="Not Listened" name="listened" domain="[('listened','=', 'False')]"/>
            </group>
            <group expand="1" string="Group By">
                <filter name="genre" context="{'group_by':'genre'}"/>
                <filter name="artist" context="{'group_by':'artist'}"/>
            </group>
        </search>
    </field>
</record>

<record id="view_music_album_tree" model="ir.ui.view">
    <field name="name">music.album.tree</field>
    <field name="model">music_album</field>
    <field name="arch" type="xml">
        <tree decoration-success="status=='new'" decoration-muted="status=='coming'" decoration-bf="status=='listened'">
            <field name="name"/>
            <field name="artist"/>
            <field name="genre" options="{'no_create':1}" />
            <field name="release_date"/>
            <field name="length" widget="float_time" optional="hide"/>
            <field name="status" optional="hide"/>
        </tree>
    </field>
</record>

<record id="view_music_album_form" model="ir.ui.view">
    <field name="name">music.album.form</field>
    <field name="model">music_album</field>
    <field name="arch" type="xml">
        <form>
            <header>
                <button name="action_listened" type="object" string="Listened" attrs="{'invisible': [('status', '!=', 'new')]}"/>
                <field name="status" widget="statusbar"  options="{'clickable':0}"/>
            </header>
            <sheet>
                <group>
                    <field name="name"/>
                    <field name="artist"/>
                    <field name="genre"/>
                    <field name="release_date"/>
                    <field name="length" widget="float_time" readonly="1"/>
                    <field name="status"/>
                </group>
                <notebook>
                  <page string="Tracks">
                    <field name="track_link_ids">
                        <tree editable="bottom">
                            <field name="track_id"/>
                        </tree>
                    </field>
                  </page>
                </notebook>
            </sheet>
        </form>
    </field>
</record>

<record id="music_album_action" model="ir.actions.act_window">
    <field name="name">Albums</field>
    <field name="res_model">music_album</field>
    <field name="view_mode">tree,form</field>
    <field name="view_id" ref="view_music_album_tree"/>
    <field name="context">{'search_default_listened': True}</field>
</record>

</odoo>