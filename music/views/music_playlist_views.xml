<?xml version="1.0"?>
<odoo>

<record id="view_music_playlist_tree" model="ir.ui.view">
    <field name="name">music.playlist.tree</field>
    <field name="model">music_playlist</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="length" widget="float_time"/>
        </tree>
    </field>
</record>

<record id="view_music_playlist_form" model="ir.ui.view">
    <field name="name">music.playlist.form</field>
    <field name="model">music_playlist</field>
    <field name="arch" type="xml">
        <form>
            <header>
                <button name="action_randomize" type="object" string="Randomize"/>
            </header>
            <sheet>
                <group>
                    <field name="name"/>
                    <field name="length" widget="float_time" readonly="1"/>
                </group>
                <notebook>
                  <page string="Tracks">
                    <field name="track_link_ids">
                        <tree editable="bottom">
                            <field name="track_id"/>
                        </tree>
                    </field>
                  </page>
                </notebook>
            </sheet>
        </form>
    </field>
</record>

<record id="music_playlist_action" model="ir.actions.act_window">
    <field name="name">Playlists</field>
    <field name="res_model">music_playlist</field>
    <field name="view_mode">tree,form</field>
    <field name="view_id" ref="view_music_playlist_tree"/>
</record>

</odoo>