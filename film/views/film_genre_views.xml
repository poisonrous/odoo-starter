<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_film_genre_tree" model="ir.ui.view">
            <field name="name">film.genre.tree</field>
            <field name="model">film.genre</field>
            <field name="inherit_id" ref="media.view_media_genre_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="string">Film Genres</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_film_genre_form" model="ir.ui.view">
            <field name="name">film.genre.form</field>
            <field name="model">film.genre</field>
            <field name="inherit_id" ref="media.view_media_genre_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="attributes">
                    <attribute name="string">Film Genres</attribute>
                </xpath>
            </field>
        </record>

        <record id="film_genre_action" model="ir.actions.act_window">
            <field name="name">Genres</field>
            <field name="res_model">film.genre</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_film_genre_tree"/>
        </record>
    </data>
</odoo>